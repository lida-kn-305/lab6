@model Lab6.App_Start.MyDbContext
@{
    ViewBag.Title = "Stadia";
}

<h2>@ViewBag.Title</h2>

<body>
    <div>
        <table style="width: 100%">
            <tr>
                <th>id</th>
                <th>Stadium name</th>
                <th>Square</th>
                <th>countryId</th>
            </tr>
            @foreach (var stadium in Model.Stadia.ToList())
            {
                <tr>
                    <td>@stadium.id</td>
                    <td>@stadium.name</td>
                    <td>@stadium.square</td>
                    <td>@stadium.countryId</td>
                    <td><a href="/Stadium/Delete/@stadium.id/" role="button"><span aria-hidden="true">delete</span></a></td>
                </tr>
            }
        </table>
    </div>
    <div>
        <a class="btnbtn-primary" href="/Stadium/AddStadium" role="button">Add new Stadium</a>
    </div>

    @using (Html.BeginForm("Update", "Stadium"))
    {
        <h6>Update stadium</h6>
        <label>id</label>
        <input type="text" name="id" id="id" value="" />
        <label>Name of the stadium</label>
        <input type="text" name="name" id="name" value="" />
        <label>Square of stadium</label>
        <input type="text" name="square" id="square" value="" />
        <input type="submit" value="Update" />
    }
</body>